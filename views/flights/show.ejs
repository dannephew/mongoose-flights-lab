<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/movies/show.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <section>
    <div>Airline: </div>
    <div><%= flight.airline %></div>
    <div>Airport: </div>
    <div><%= flight.airport %></div>
    <div>Flight No.: </div>
    <div><%= flight.flightNo %></div>
    <div>Departure: </div>
    <div><%= flight.departs %></div>
  </section>

    <h2>Tickets</h2>
    <form 
        id="add-review-form"
        action="/flights/<%= flight._id %>/tickets"
        method="POST"
    >
        <label>Seat:
            <input name="seat" required pattern="[A-F][1-9]\d?">
        </label><br>
        <label>Price:
            <input name="price">
        </label><br>
        <button type="submit">Add Ticket</button>
    </form>

    <% if (flight.tickets.length) { %>
        <h1>Tickets List</h1>
        <table>
          <thead>
            <tr>
              <th>Seat</th>
              <th>Price</th>
            </tr>
          </thead>
          <tbody>
            <% flight.tickets.forEach(function(ticket) { %>
              <tr>
                <td><%= ticket.seat %></td>
                <td><%= ticket.price %></td>
              </tr>
            <% }) %>
      <% } else { %>
        <h3>No Tickets Added</h3>
      <% } %>
    </tbody>
    </table>
    <div>Destinations:</div>
    <ul>
                <%- flight.destination.map(d=>`<li>${d.airport}</li>`).join('')%>
              </ul>
            <form action="/flights/<%=flight._id%>/destinations" method="POST">
                <select name="destinationId">
                    <%- destinations.map(d =>`<option value="${d._id}">${d.airport}</option>`) %> 
                </select>
                <button type="submit">Add to destination</button>
            </form>
</main>
  
<%- include('../partials/footer') %>