<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/movies/new.css" />
<%- include('../partials/nav') %>

<main>
    <h1>Enter a New Flight</h1>
    <form action="/flights" method="POST">
      <label>Airline:
        <input type="text" name="airline">
      </label><br>
      <label>Airport:
        <select name="airport">
            <option value="AUS" selected>AUS</option>
            <option value="DFW" selected>DFW</option>
            <option value="DEN" selected>DEN</option>
            <option value="LAX" selected>LAX</option>
            <option value="SAN" selected>SAN</option>
        </select>
      </label><br>
      <label>Flight No:
        <input type="text" name="flightNo">
      </label><br>
      <label>Departure:
        <input type="datetime-local" name="departs">
      </label><br>
      <button type="submit">Add Flight</button>
    </form>
</main>
<%- include("../partials/footer") %> 
